<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dogerblue</item>
        <item name="colorPrimaryDark">@color/dogerblue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="color">@color/dogerblue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">

        <item  name="spinBars">true</item>
        <item name="color">@color/dogerblue</item>

    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/royalBlue</item>
        <item name="android:textColorSecondary">@color/royalBlue</item>
        <item name="actionMenuTextColor">@color/royalBlue</item>
    </style>

    <style name="CollapseAppbar" parent="@style/TextAppearance.AppCompat.Medium">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ExpandedAppBar" parent="@style/TextAppearance.AppCompat.Title">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>

    </style>

    <!--Rating Dialog-->

    <style name="RatingDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RatingDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/RatingDialogButtonStyle</item>
    </style>

    <style name="RatingDialogButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/royalBlue</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/royalBlue</item>
        <item name="colorControlNormal">@color/royalBlue</item>
        <item name="colorControlActivated">@color/royalBlue</item>
    </style>

    <style name="beforeLogin" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>

    </style>

</resources>